{
  "version": "1.0.0",
  "description": "Typescript simple runtime powered by Swc",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "pnpm -r --filter ./packages run build",
    "test": "pnpm -r --filter ./packages run test",
    "push": "vary push",
    "vp": "vary vp",
    "release": "vary release",
    "release:only": "vary release:only",
    "release:quick": "vary release:quick",
    "clean:output": "vary clean:output"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@fz6m/eslint-plugin-sakina": "^1.1.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@xn-sakina/vary": "^1.0.0",
    "commit-verify": "^1.0.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "only-allow": "^1.1.0",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{jsx,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6.20"
  },
  "packageManager": "pnpm@6.20.0",
  "license": "MIT"
}
